         </div>
         

         <div class="bg-[#bbb] w-full h-[1.8px] mb-6  ">
</div>

          <div class="mb-10 flex gap-6">
            
            <div>
                <h3 class="font-semibold text-2xl tracking-wide uppercase">Stranger (Thriller)</h3>
              <p class="text-sm tracking-wide font-proxima font-semibold">Lorem ipsum dolor sit amet consectetur adipisicing elit. Minima, quo maiores dolorem, necessitatibus qui asperiores ipsum cumque, quam incidunt laudantium ullam hic quae? At pariatur assumenda beatae qui quidem reiciendis?</p>
            </div>
           
              <div class="h-[340px] w-[2200px] bg-blue-200 ">

              </div>

          </div>
          <div class="StoryboardCard pb-16 px-32">
            {/* <h3 class="text-2xl font-bold mb-4 font-proxima">{project.title}</h3> */}
            
             <div class="VideoStoryboard w-full flex-auto">
               <video src="https://video.wixstatic.com/video/a9013c_2ca45b029a21401ba58394b77609bba3/480p/mp4/file.mp4" controls autoplay muted class="w-full h-full object-cover  border-[2px] rounded border-black"></video>
            </div>
          </div>
        {storyboards.map(project => ( 
         <div class="bg-[#bbb] w-full h-[1.8px] mb-6  ">
</div>

            <h3 class="text-2xl font-bold mb-4 font-proxima uppercase">{project.title}</h3> 
            <div class="flex-1">
               <p class="text-sm tracking-wide  font-proxima "></p>
            </div>
             <div class="VideoStoryboard w-full flex-auto px-24">
               <video src={project.src} controls autoplay muted class="w-full h-full object-cover  border-[2px] rounded border-black"></video>
            </div>
          
         ))
        }
       </div>

    </section>
    
   
    
	
