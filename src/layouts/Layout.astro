---
// Supports weights 100-900
import '@fontsource-variable/onest';
import '@fontsource/geist-sans';

// Components
import Sidebar from '@/components/Sidebar';
import RightLogo from '@/components/RightLogo';
import TestingScroll from '@/components/TestingScroll'

// Styles
import '@/styles/globals.css'
import '@/styles/scroll.css'

// Props
const { title } = Astro.props;

interface Props {
	title: string;
}

//Data
import sidebarLinks from '@/data/sidebarLinks'
import FadeAnimation from '@/components/animations/FadeAnimation';
import { ReactLenis } from "lenis/react";


---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <meta name="generator" content={Astro.generator} /> -->
		<title>{title}</title>
	</head>
	<body>
		<ReactLenis root>

			<!-- BACKGROUND -->
		    <div class="fixed top-0 z-[-2] h-screen w-screen bg-[#f4f4f6]"></div>

			<!-- WRAPPER -->
			<div class="h-screen w-screen relative">

				<!-- SIDEBAR LEFT-->
				 <Sidebar 
                 client:idle 
                 avatar="https://pbs.twimg.com/media/GSHjbB1WAAA4BVI?format=jpg&name=large"
                 links={sidebarLinks}
                 />

				<!-- CONTENT -->
			  	<main class="px-6 ml-[270px] mr-[65px] relative pb-12">
					 <slot />

					 <!-- RIGHTBAR -->
					<RightLogo client:idle />
				</main>

			</div>

		</ReactLenis>
	</body>
</html>
<style is:global>
