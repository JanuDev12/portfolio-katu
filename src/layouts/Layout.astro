---
// Supports weights 100-900
import '@fontsource-variable/onest';
import '@fontsource/geist-sans';

// Components
import Sidebar from '@/components/Sidebar';
import RightLogo from '@/components/RightLogo';

// Styles
import '@/styles/globals.css'
import '@/styles/scroll.css'

// Props
const { title } = Astro.props;

interface Props {
	title: string;
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <meta name="generator" content={Astro.generator} /> -->
		<title>{title}</title>
	</head>
	<body>
		
        <!-- BACKGROUND -->
		<div class="fixed top-0 z-[-2] h-screen w-screen bg-[#f4f4f6]"></div>

        <!-- WRAPPER -->
		<div class="h-screen flex">

            <!--  METHOD 1:
            <Sidebar client:idle>
               <SidebarAvatar avatar="/">

               <SidebarLinks link=""> storyboard portfolio <SidebarLink />
               <SidebarLinks link=""> password <SidebarLink />
               <SidebarLinks link=""> backgrounds <SidebarLink />
               <SidebarLinks link=""> merch art <SidebarLink />
               <SidebarLinks link=""> about me <SidebarLink />
            <Sidebar />
            -->

            <!-- METHOD 2:
             <Sidebar client:idle avatar="/avatar.jpg" links={dataLink} />
            -->

            <!-- SIDEBAR -->
            <Sidebar client:idle />
            

            <main class="w-full flex gap-6 justify-between px-4">

                <!-- CONTENT -->
			    <slot />

                <!-- RIGHT LOGO -->
                
                <!-- Method 1: avatar="/avatar" -->
                <RightLogo client:idle />
               

		    </main>
		
		</div>
	</body>
</html>
